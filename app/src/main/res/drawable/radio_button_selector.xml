<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Unchecked state (transparent circle) -->
    <item android:state_checked="false">
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="@android:color/white" /> <!-- White border -->
            <solid android:color="@android:color/transparent" /> <!-- Transparent fill -->
        </shape>
    </item>
    <!-- Checked state (white filled circle) -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@android:color/white" /> <!-- White fill -->
        </shape>
    </item>
</selector>